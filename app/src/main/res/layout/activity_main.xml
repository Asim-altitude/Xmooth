<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/bottomLay"
        >

        <ScrollView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:id="@+id/home_nav"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:id="@+id/profile_view"
                    android:background="@drawable/menu_item_selector"
                    >

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/user_image"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:padding="5dp"
                            android:layout_gravity="center"
                            android:src="@drawable/white_image" />

                        <com.smilieideas.xmooth.views.CustomTextView
                            android:id="@+id/initial_text"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:focusable="false"
                            android:text="A"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            app:custom_font="insignia_roman.ttf"></com.smilieideas.xmooth.views.CustomTextView>


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <com.smilieideas.xmooth.views.CustomTextView
                            android:id="@+id/name_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:text="User Name"
                            android:textAllCaps="false"
                            android:textColor="@color/grey"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            app:custom_font="insignia_roman.ttf"></com.smilieideas.xmooth.views.CustomTextView>

                        <com.smilieideas.xmooth.views.CustomTextView
                            android:id="@+id/email_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:text="User Name"
                            android:textAllCaps="false"
                            android:textColor="@color/grey"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:layout_marginLeft="10dp"
                            app:custom_font="Montserrat_Regular.ttf"></com.smilieideas.xmooth.views.CustomTextView>

                    </LinearLayout>


                </LinearLayout>




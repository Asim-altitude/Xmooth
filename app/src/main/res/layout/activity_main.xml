                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="15dp"
                    android:focusable="true"
                    android:nextFocusUp="@id/profile_view"
                    android:background="@drawable/menu_item_selector"
                    android:id="@+id/home_btn"

                    >
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/baseline_home_24"
                        app:tint="@color/white"
                        android:focusable="false"
                        />
                    <com.smilieideas.xmooth.views.CustomTextView
                        app:custom_font="Montserrat_Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Home"
                        android:focusable="false"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="15dp"
                    android:focusable="true"
                    android:background="@drawable/menu_item_selector"
                    android:id="@+id/photo_btn"

                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/photo_icon"
                        app:tint="@color/white"
                        android:focusable="false"

                        />
                    <com.smilieideas.xmooth.views.CustomTextView
                        app:custom_font="Montserrat_Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Photos"
                        android:layout_marginLeft="10dp"
                        android:focusable="false"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="15dp"
                    android:nextFocusUp="@id/photo_btn"
                    android:nextFocusDown="@id/album_btn"
                    android:background="@drawable/menu_item_selector"
                    android:id="@+id/video_btn"

                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/video_menu_icon"
                        app:tint="@color/white"
                        />
                    <com.smilieideas.xmooth.views.CustomTextView
                        app:custom_font="Montserrat_Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Videos"
                        android:layout_marginLeft="10dp"
                        android:focusable="true"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="15dp"
                    android:focusable="true"
                    android:nextFocusUp="@id/video_btn"
                    android:nextFocusDown="@id/premium_btn"
                    android:background="@drawable/menu_item_selector"
                    android:id="@+id/album_btn"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/album_icon"
                        app:tint="@color/white"
                        />
                    <com.smilieideas.xmooth.views.CustomTextView
                        app:custom_font="Montserrat_Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Albums"
                        android:layout_marginLeft="10dp"
                        android:focusable="true"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="15dp"
                    android:focusable="true"
                    android:nextFocusUp="@id/album_btn"
                    android:background="@drawable/menu_item_selector"
                    android:id="@+id/premium_btn"

                    >
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/premium_colored"
                        />
                    <com.smilieideas.xmooth.views.CustomTextView
                        app:custom_font="Montserrat_Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Premium"
                        android:layout_marginLeft="10dp"
                        android:focusable="true"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>


            </LinearLayout>
        </ScrollView>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nestedScrollView"
            >

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
              android:layout_marginTop="20dp"

              >

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:visibility="gone"
                  >

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_alignParentRight="true"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:layout_marginBottom="10dp"
                      android:id="@+id/rootfilterLay"
                      >

                      <LinearLayout
                          android:id="@+id/refrshLay"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:background="@drawable/nav_item_selector"
                          android:gravity="center_vertical"
                          android:nextFocusRight="@id/slideshowLay"
                          android:nextFocusDown="@id/itemGridList"
                          android:orientation="horizontal"
                          android:layout_marginRight="10dp"
                          android:padding="10dp">

                          <ImageView
                              android:layout_width="25dp"
                              android:layout_height="25dp"
                              android:src="@drawable/baseline_refresh_24"
                              app:tint="@color/white" />

                          <com.smilieideas.xmooth.views.CustomTextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Refresh"
                              android:textColor="@color/white"
                              android:textSize="16sp"
                              app:custom_font="Montserrat_Regular.ttf"

                              />
                      </LinearLayout>

                      <LinearLayout
                          android:id="@+id/slideshowLay"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:background="@drawable/nav_item_selector"
                          android:gravity="center_vertical"
                          android:nextFocusLeft="@id/refrshLay"
                          android:nextFocusRight="@id/designLay"
                          android:nextFocusDown="@id/itemGridList"
                          android:orientation="horizontal"
                          android:layout_marginRight="10dp"
                          android:padding="10dp">

                          <ImageView
                              android:layout_width="25dp"
                              android:layout_height="25dp"
                              android:src="@drawable/ic_play_arrow_black_24dp"
                              app:tint="@color/white" />

                          <com.smilieideas.xmooth.views.CustomTextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Slideshow"
                              android:textColor="@color/white"
                              android:textSize="16sp"
                              app:custom_font="Montserrat_Regular.ttf"

                              />
                      </LinearLayout>


                      <LinearLayout
                          android:id="@+id/designLay"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:background="@drawable/nav_item_selector"
                          android:gravity="center_vertical"
                          android:nextFocusLeft="@id/slideshowLay"
                          android:nextFocusDown="@id/itemGridList"
                          android:orientation="horizontal"
                          android:padding="10dp">

                          <ImageView
                              android:id="@+id/staggered_icon"
                              android:layout_width="25dp"
                              android:layout_height="25dp"
                              android:padding="5dp"
                              android:src="@drawable/staggered"
                              app:tint="@color/white" />

                          <com.smilieideas.xmooth.views.CustomTextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Layout"
                              android:textColor="@color/white"
                              android:textSize="16sp"
                              app:custom_font="Montserrat_Regular.ttf"

                              />
                      </LinearLayout>


                  </LinearLayout>


              </RelativeLayout>


              <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/videoList"
                android:visibility="visible"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/itemGridList"
                android:visibility="visible"
                android:layout_marginTop="10dp"
                />

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:id="@+id/album_lay"
                  android:visibility="gone"
                  >
                  <ImageView
                      android:id="@+id/back_home_btn"
                      app:custom_font="Roboto_Medium.ttf"
                      android:layout_width="80dp"
                      android:layout_height="40dp"
                      android:src="@drawable/back"
                      android:layout_margin="10dp"
                      android:background="@drawable/nav_item_selector"
                      />
                  <androidx.recyclerview.widget.RecyclerView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:id="@+id/albumList"
                      android:visibility="visible"
                      />
              </LinearLayout>

        </LinearLayout>

        </androidx.core.widget.NestedScrollView>
        



    </LinearLayout>



</LinearLayout>